{
  "name": "DiscordRTL",
  "description": "Support RTL in Discord",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "host_permissions": ["https://discord.com/"],
  "action": {
    "default_title": "DiscordRTL",
    "default_popup": "popup.html"
  }
}
